@page
@model asp_presentacion.Pages.Ventanas.ReservarClaseModel
@{
    ViewData["Title"] = "Reservar Clase";
}

<div class="container mt-4">
    <h2>📅 Reservar Clase</h2>
    <hr />

    <!-- Selector de fecha -->
    <form method="get" class="mb-3">
        <div class="form-group row">
            <label for="fecha" class="col-sm-2 col-form-label">Fecha:</label>
            <div class="col-sm-4">
                <input type="date" id="fecha" name="fecha" class="form-control" value="@Model.Fecha.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-sm-2">
                <button type="submit" class="btn btn-primary">Buscar</button>
            </div>
        </div>
    </form>

    <!-- Mensajes emergentes -->
    @if (ViewData.ContainsKey("Mensaje"))
    {
        @await Html.PartialAsync("../Emergentes/Mensajes.cshtml", ViewData["Mensaje"])
    }

    <!-- Listado de clases -->
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Clase</th>
                <th>Duración</th>
                <th>Coach</th>
                <th>Horario</th>
                <th>Cupos</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Clases != null && Model.Clases.Any())
            {
                foreach (var clase in Model.Clases)
                {
                    <tr>
                        <td>@clase.Nombre</td>
                        <td>@clase.Duracion</td>
                        <td>@clase.CoachId</td>
                        <td>@clase.HorarioId</td>
                        <td>@clase.Cupos</td>
                        <td>
                            @if (clase.Cupos > 0)
                            {
                                <form method="post">
                                    <input type="hidden" name="ClaseId" value="@clase.Id" />
                                    <input type="hidden" name="FechaReserva" value="@Model.Fecha.ToString("yyyy-MM-dd")" />
                                    <button type="submit" asp-page-handler="Reservar" class="btn btn-success">Reservar</button>
                                </form>
                            }
                            else
                            {
                                <button class="btn btn-secondary" disabled>Sin cupos</button>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No hay clases disponibles para esta fecha.</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Botón volver -->
    <a class="btn btn-secondary mt-3" asp-page="/Ventanas/UsuarioPrincipal">⬅ Volver al Portal</a>
</div>