@page
@model asp_presentacion.Pages.Ventanas.UsuarioModel
@{
    ViewData["Titulo"] = "Usuarios";
}
<center>
    <div>
        <form method="POST" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div align="left">
                <h3>Usuario</h3>
            </div>

            <!-- Botonera -->
            <div align="left" class="bt_panel_buttons">
                <input type="submit" value="Refrescar" asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit" value="Nuevo" asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit" value="Guardar" asp-page-handler="BtGuardar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit" value="Cancelar" asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit" value="Login" asp-page-handler="BtLogin"
                       class="btn btn-success"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit" value="Registrar" asp-page-handler="BtRegistrar"
                       class="btn btn-info"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>

            <!-- Hidden para Id -->
            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden" asp-for="@Model.Actual!.Id" />
            }

            <!-- Hidden en caso de borrar -->
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden" asp-for="@Model.Actual!.Nombre" />
                <input type="hidden" asp-for="@Model.Actual!.Correo" />
                <input type="hidden" asp-for="@Model.Actual!.PasswordHash" />
                <input type="hidden" asp-for="@Model.Actual!.RolId" />
            }

            <!-- Formulario de edición -->
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>Datos del Usuario</h3>
                    <div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Nombre</label>
                            <div class="col-lg-6">
                                <input id="nmNombre" class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Nombre" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Correo</label>
                            <div class="col-lg-6">
                                <input id="nmCorreo" class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Correo" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Contraseña</label>
                            <div class="col-lg-6">
                                <input id="nmPasswordHash" type="password"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.PasswordHash" />
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Mensajes emergentes -->
            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden" asp-for="@Model.Accion" />
                @await Html.PartialAsync("Mensajes", ViewData["Mensaje"])
            }

            <!-- Popup de confirmación de borrado -->
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">Mensaje</h2>
                            <h4 align="left">¿Desea borrar el usuario?</h4>
                            <h6 align="left">@Model.Actual!.Nombre (@Model.Actual!.Correo)</h6>
                            <br /><br />
                            <input type="submit" value="Borrar" asp-page-handler="BtBorrar"
                                   class="btn btn-secondary" />
                            <input type="submit" value="Cerrar" asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            <!-- Listado de usuarios -->
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input id="flNombre" class="cts_forms form-control"
                       asp-for="@Model.Filtro!.Nombre"
                       placeholder="Nombre" />
                <br />

                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>Nombre</th>
                            <th>Correo</th>
                            <th>Rol</th>
                            <th class="cl_actions">Acción</th>
                        </tr>
                        @if (Model != null && Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>@elemento.Nombre</td>
                                    <td>@elemento.Correo</td>
                                    <td>
                                        @(elemento.RolId == 1 ? "Usuario" :
                                                                    elemento.RolId == 2 ? "Coach" : "Otro")
                        </td>
                        <td>
                            <input type="submit" value="Modificar"
                                   asp-page-handler="BtModificar"
                                   class="btn btn-secondary"
                                   asp-route-data="@elemento.Id" />
                            <input type="submit" value="Borrar"
                                   asp-page-handler="BtBorrarVal"
                                   class="btn btn-secondary"
                                   asp-route-data="@elemento.Id" />
                        </td>
                    </tr>
                                        }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>