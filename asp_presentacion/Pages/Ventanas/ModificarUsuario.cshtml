@page
@model asp_presentacion.Pages.Ventanas.ModificarUsuarioModel
@{
    ViewData["Title"] = "Modificar Usuario";
}

<div class="container mt-4">
    <h2 class="mb-3">Modificar Perfil</h2>
    <hr />

    <form method="post" asp-page-handler="Guardar">
        <div class="mb-3">
            <label class="form-label">Nombre</label>
            <input asp-for="Nombre" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Correo</label>
            <input asp-for="Correo" class="form-control" />
        </div>

        <h5 class="mt-4">Cambio de Contraseña</h5>
        <p class="text-muted">Solo llene estos campos si desea actualizar la contraseña.</p>

        <div class="mb-3">
            <label class="form-label">Contraseña Actual</label>
            <input asp-for="PasswordActual" type="password" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Nueva Contraseña</label>
            <input asp-for="PasswordNueva" type="password" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success mt-2">Guardar Cambios</button>
        <a asp-page="/Ventanas/ConfigUsuario" class="btn btn-secondary mt-2 ms-2">Cancelar</a>
    </form>

    @if (ViewData.ContainsKey("Mensaje"))
    {
        @await Html.PartialAsync("Mensajes", ViewData["Mensaje"])
    }
</div>
